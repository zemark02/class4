<h1>Posts</h1>
<table >
  <thead >
    <tr >
      <th >Message</th>
      <th>time</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody >
    <% @user.posts.each do |post| %>
      <tr >
        <td ><%= post.message %></td>
        <td><%= post.created_at%></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

